.profile {
  background: #e54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
  margin-bottom: 450rpx;
}

.profile-img {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name {
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}
